# ============================================
# AI Study Tool - Environment Configuration Example
# ============================================
# Copy this file to .env and fill in your values
# On Windows: copy .env.example .env
# On Linux/Mac: cp .env.example .env

# ============================================
# Flask Configuration
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_DEBUG=False

# ============================================
# Database Configuration
# ============================================
# For MySQL:
# DATABASE_URL=mysql+pymysql://username:password@localhost/study_tool
# 
# For SQLite (development/testing):
DATABASE_URL=sqlite:///study_tool.db

# ============================================
# LLM Provider Configuration
# ============================================
# Choose: 'openai' or 'gemini'
LLM_PROVIDER=openai

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# Gemini Configuration (if using Gemini)
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# ============================================
# RAG (Retrieval Augmented Generation) Settings
# ============================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ============================================
# Audio/TTS Configuration
# ============================================
TTS_PROVIDER=openai
TEACHER_VOICE=alloy
STUDENT_VOICE=nova

# ============================================
# Media Output Directories
# ============================================
VIDEO_OUTPUT_DIR=backend/static/videos
AUDIO_OUTPUT_DIR=backend/static/audio
